{
  "info": {
    "name": "Janus API",
    "description": "Authentication & Authorization API",
    "_postman_id": "janus-api-collection",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "accessToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "refreshToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "resetToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Register",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const json = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', json.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', json.refreshToken);",
                  "    pm.test('Status is 201', () => pm.response.to.have.status(201));",
                  "    pm.test('Returns accessToken', () => pm.expect(json.accessToken).to.be.a('string'));",
                  "    pm.test('Returns refreshToken', () => pm.expect(json.refreshToken).to.be.a('string'));",
                  "    pm.test('Token type is Bearer', () => pm.expect(json.tokenType).to.eql('Bearer'));",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Vitor Saucedo\",\n  \"email\": \"vitor@janus.dev\",\n  \"password\": \"Test@1234\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Register - Duplicate Email",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 409', () => pm.response.to.have.status(409));",
                  "pm.test('Error is Conflict', () => pm.expect(pm.response.json().error).to.eql('Conflict'));"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Vitor Saucedo\",\n  \"email\": \"vitor@janus.dev\",\n  \"password\": \"Test@1234\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
