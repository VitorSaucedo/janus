    {
      "name": "User",
      "item": [
        {
          "name": "Get Me",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Status is 200', () => pm.response.to.have.status(200));",
                  "pm.test('Returns email', () => pm.expect(pm.response.json().email).to.be.a('string'));",
                  "pm.test('Returns name', () => pm.expect(pm.response.json().name).to.be.a('string'));",
                  "pm.test('Returns role', () => pm.expect(pm.response.json().role).to.be.a('string'));"
                ]
              }
            }
          ],
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{accessToken}}" }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/user/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "user", "me"]
            }
          }
        },
